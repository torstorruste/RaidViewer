<div>
    <h3 @onclick="ToggleVisible">@( this.Visible=="collapse" ? "+" : "-")@Player.Name</h3>

    <div class="@Visible">
        <ul>
        @foreach(var encounter in Raid.Encounters) {
            var character = GetCharacter(Player, encounter);
            
            @if(character==null) {
                <li>@(GetBoss(encounter.BossId).Name): Benched</li>
            } else {
                <li>@(GetBoss(encounter.BossId).Name):<img src="images/classes/@(character.CharacterClass.ToString().ToLower()).png" width="20px" height="20px" />
                <span class="@character.CharacterClass">@character.Name</span>
                <img src="images/roles/@(GetRole(encounter, character).ToString().ToLower()).png" width="20px" height="20px" />
                </li>
            }
        }
        </ul>
    </div>
</div>